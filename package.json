{
  "author": "Charles-Henri ARNOULD <charnould@pierre-ia.org>",
  "license": "AGPL-3.0-only",
  "type": "module",
  "name": "pierre",
  "module": "app.ts",
  "scripts": {
    "-------- GENERATE KNOWLEDGE --------": "",
    "generate": "dotenvx run -f .env.production -- bun run ./utils/knowledge/_run.ts",
    "-------- BUILD CODEBASE --------": "",
    "build:cb": "bun run config/build.ts",
    "transpile": "bun build --entrypoints assets/pierre-ia.org/scripts/*.ts --outdir assets/pierre-ia.org/dist/js --minify --target browser --watch",
    "format": "bunx prettier '!**/*.js' '!assets/pierre-ia.org/dist' --write . --plugin=prettier-plugin-tailwindcss --single-quote --no-semi --trailing-comma none --print-width 100",
    "ngrok": "ngrok http --url=mule-exotic-raven.ngrok-free.app 3000",
    "lint": "bunx @biomejs/biome check --write --unsafe . --config-path=config/biome.jsonc",
    "css": "bunx @tailwindcss/cli@next -i assets/pierre-ia.org/tailwind/style.css -o assets/pierre-ia.org/dist/css/style.css --minify --watch",
    "eval:query": "dotenvx run -f .env.production -- bun test eval-augment-query --watch",
    "-------- TEST --------": "",
    "test:e2e": "bun test e2e --timeout 60000",
    "test:unit": "bun test unit",
    "test:config": "bun test check-config",
    "-------- START --------": "",
    "dev": "bash config/telemetry.sh init_db && DEBUG=true dotenvx run -f .env.production -- bun --watch run app.ts",
    "start": "bash config/telemetry.sh init_db && bun run app.ts",
    "-------- DEPLOYMENT --------": "",
    "staging:deploy": "dotenvx run -f .env.staging -- kamal deploy",
    "staging:logs": "dotenvx run -f .env.staging -- kamal app logs",
    "staging:shell": "dotenvx run -f .env.staging -- kamal app exec -i bash",
    "production:deploy": "dotenvx run -f .env.production -- kamal deploy",
    "production:logs": "dotenvx run -f .env.production -- kamal app logs",
    "production:shell": "dotenvx run -f .env.production -- kamal app exec -i bash"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^1.0.6",
    "@ai-sdk/cohere": "^1.0.6",
    "@ai-sdk/google": "^1.0.12",
    "@ai-sdk/mistral": "^1.0.6",
    "@ai-sdk/openai": "^1.0.11",
    "ai": "^4.0.22",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "hono": "^4.6.15",
    "lodash": "^4.17.21",
    "mammoth": "^1.8.0",
    "marked": "^15.0.4",
    "natural": "^8.0.1",
    "prettier": "^3.4.2",
    "remove-markdown": "^0.6.0",
    "sqlite-vec": "^0.1.6",
    "sqlite-vec-darwin-arm64": "^0.1.6",
    "sqlite-vec-linux-x64": "^0.1.6",
    "stopwords-fr": "^0.3.0",
    "talisman": "^1.1.4",
    "tiktoken": "^1.0.18",
    "xlsx": "https://cdn.sheetjs.com/xlsx-0.20.3/xlsx-0.20.3.tgz",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "arg": "^5.0.2",
    "chalk": "^5.4.1",
    "@dotenvx/dotenvx": "^1.32.0",
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "^1.1.14",
    "ora": "^8.1.1",
    "@types/lodash": "^4.17.13",
    "@types/turndown": "^5.0.5",
    "llamaindex": "^0.8.30",
    "markdown-toc": "^1.2.0",
    "puppeteer": "^23.11.1",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "@tailwindcss/cli": "^4.0.0-beta.8",
    "tailwindcss": "^4.0.0-beta.8",
    "turndown": "^7.2.0",
    "typescript": "^5.7.2"
  }
}
