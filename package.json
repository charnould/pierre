{
  "author": "Charles-Henri ARNOULD <charnould@pierre-ia.org>",
  "license": "AGPL-3.0-only",
  "type": "module",
  "name": "pierre",
  "module": "app.ts",
  "scripts": {
    "build:cb": "bun run config/build.ts",
    "transpile": "bun build --entrypoints assets/pierre-ia.org/scripts/*.ts --outdir assets/pierre-ia.org/dist/js --minify --target browser --watch",
    "format": "bunx prettier '!**/*.js' '!assets/pierre-ia.org/dist' --write . --plugin=prettier-plugin-tailwindcss",
    "lint": "bunx @biomejs/biome check --write --unsafe . --config-path=config/biome.jsonc",
    "css": "bunx @tailwindcss/cli@next -i assets/pierre-ia.org/tailwind/style.css -o assets/pierre-ia.org/dist/css/style.css --minify --watch",
    "eval:reranker": "NODE_ENV=production bun test eval-reranker --watch --timeout 30000",
    "eval:output": "NODE_ENV=production bun test generate-output --watch --timeout 30000",
    "eval:speed": "NODE_ENV=production bun test eval-speed --watch --timeout 30000",
    "eval:query": "NODE_ENV=production bun test eval-augment --watch --timeout 30000",
    "test:e2e": "bun test e2e --timeout 60000",
    "test:config": "bun test check-config",
    "test:unit": "bun test unit",
    "dev": "bash config/telemetry.sh init_db && DEBUG=true bun --env-file=.env.production --watch run app.ts",
    "generate": "NODE_ENV=production bun run ./utils/knowledge/_run.ts --community ",
    "start": "bash config/telemetry.sh init_db && bun run app.ts",
    "version": "bun run utils/update-pierre.ts",
    "staging:deploy": "dotenvx run -f .env.staging -- kamal deploy",
    "staging:logs": "dotenvx run -f .env.staging -- kamal app logs",
    "staging:shell": "dotenvx run -f .env.staging -- kamal app exec -i bash",
    "production:deploy": "dotenvx run -f .env.production -- kamal deploy",
    "production:logs": "dotenvx run -f .env.production -- kamal app logs",
    "production:shell": "dotenvx run -f .env.production -- kamal app exec -i bash"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^1.1.8",
    "@ai-sdk/cerebras": "^0.1.10",
    "@ai-sdk/cohere": "^1.1.10",
    "@ai-sdk/google": "^1.1.14",
    "@ai-sdk/groq": "^1.1.9",
    "@ai-sdk/mistral": "^1.1.11",
    "@ai-sdk/openai": "^1.1.12",
    "@ai-sdk/togetherai": "^0.1.11",
    "@date-fns/tz": "^1.2.0",
    "@observablehq/plot": "^0.6.17",
    "ai": "^4.1.41",
    "arquero": "^8.0.0",
    "cron": "^3.5.0",
    "@dotenvx/dotenvx": "^1.36.0",
    "d3": "^7.9.0",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dedent": "^1.5.3",
    "dompurify": "^3.2.4",
    "hono": "^4.7.1",
    "jsdom": "^26.0.0",
    "lodash": "^4.17.21",
    "mammoth": "^1.9.0",
    "marked": "^15.0.7",
    "natural": "^8.0.1",
    "prettier": "^3.5.1",
    "remove-markdown": "^0.6.0",
    "sqlite-vec": "^0.1.6",
    "sqlite-vec-darwin-arm64": "^0.1.6",
    "sqlite-vec-linux-x64": "^0.1.6",
    "stopwords-fr": "^0.3.0",
    "talisman": "^1.1.4",
    "tiktoken": "^1.0.20",
    "xlsx": "https://cdn.sheetjs.com/xlsx-0.20.3/xlsx-0.20.3.tgz",
    "zod": "^3.24.2",
    "turndown": "^7.2.0"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "^1.2.2",
    "@types/lodash": "^4.17.15",
    "@types/turndown": "^5.0.5",
    "markdown-toc": "^1.2.0",
    "puppeteer": "^24.2.1",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "@tailwindcss/cli": "^4.0.6",
    "tailwindcss": "^4.0.6",
    "typescript": "^5.7.3"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "trailingComma": "none",
    "printWidth": 100
  }
}
